{
    "paths": "./src/**/*.{sass,scss,css}",
    "replaces": [
        {
            "selectors": [
                ": ",
                "color: ",
                "background-color: "
            ],
            "replace": [
                {
                    "from": "#bde5bd",
                    "to": "gfk-style.$green-100"
                },
                {
                    "from": "green",
                    "to": "gfk-style.$green"
                },
                {
                    "from": "red",
                    "to": "blue"
                }
            ]
        },
        {
            "selectors": [
                "font-size: "
            ],
            "replace": [
                {
                    "from": "1rem",
                    "to": "gfk-style.$body"
                }
            ]
        },
        {
            "selectors": [
                "padding: ",
                "margin: "
            ],
            "replace": [
                {
                    "from": "4px",
                    "to": "gfk-style.$base-size"
                }
            ]
        },
        {
            "selectors": [
                "border-radius: "
            ],
            "replace": [
                {
                    "from": "4px",
                    "to": "gfk-style.$border-radius"
                }
            ]
        },
        {
            "selectors": [
                "z-index: "
            ],
            "replace": [
                {
                    "from": "9000",
                    "to": "gfk-style.$z-index-modal"
                }
            ]
        }
    ]
}